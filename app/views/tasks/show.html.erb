<h2>My task: <%= @task.title %></h2>

<p>Detail: <%= @task.details %></p>

<p>Status: <%= @task.completed ? "Finished" : "Not done yet" %> </p>

<%= link_to "Back to list", tasks_path %>
<%= link_to "Edit your task", edit_task_path %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
